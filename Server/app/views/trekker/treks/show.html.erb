<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= current_trek.title %></h1>
  <%= image_tag current_trek.image, :class => 'img-responsive' %>
  <hr />
  
  <div class="col-sm-2 col-xs-offset-10">
      <%= link_to 'Preview', trek_path(current_trek), :class => 'btn btn-warning pull-right' %>
  </div>
  <br class="clr" />

  <div class="text-center ">
    <%= link_to 'Add a new theme under this trek', new_trekker_trek_section_path(current_trek), :class => 'btn btn-primary btn-lg' %>
  </div> 

  <ul>
    <% current_trek.sections.each do |section| %>
      <br />
      <li>
        <h3><%= section.title %></h3>
        <div class="col-sm-2 col-xs-offset-10">
        <%= link_to 'Add Restaurant', new_trekker_section_restaurant_path(section), :class => 'pull-right btn btn-primary' %>

        </div>
        <ul>
          <% section.restaurants.each do |restaurant| %>
            <div class="col-sm-10 col-xs-offset-0">
              <li>
                <b><%= restaurant.name %></b>
                -
                <%= restaurant.description %>
              </li>
              <br \>
            </div>
          <% end %>
        </ul>
        <br class="clr" />
      </li>
    <% end %>
  </ul>
</div>