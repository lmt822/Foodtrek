<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">All Treks</h1>
  <hr />

     <% @treks.each do |trek| %>
          <h2 class="text-left">
               <%= link_to trek.title, trek_path(trek) %>
          </h2>
          <br />
          <div class="col-sm-10 col-xs-12 ">
               <h4><%= trek.description %></h4>
          </div>
          
          <div class="col-sm-2 col-xs-12 text-right">
               <%= link_to 'Explore', trek_path(trek), :class => 'btn btn-primary btn-large' %>
          </div>
          <br class="clr" / >
     <% end %>
     
     <br class="clr" />
  <hr />
</div>