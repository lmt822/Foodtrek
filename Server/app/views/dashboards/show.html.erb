<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>My Treks</h1>
  <% current_user.enrolled_treks.each do |trek| %>
    
  <h3 class="text-center">
      <%= link_to trek.title, trek_path(trek) %>
  </h3>
    
    <br />
  <%= image_tag trek.image, :class => 'img-responsive' %>
    <br />
    
  <div class="col-xs-12 col-sm-8">
    <%= trek.description %>
	</div>
	
  <div class="col-xs-12 col-sm-4 text-center">
    <%= link_to "More Info...", trek_path(trek), :class => 'btn btn-lg btn-primary' %>
	</div>
  
  <hr class="col-xs-8 col-xs-offset-2">
  <br class="clr" / >
  <% end %>
</div>